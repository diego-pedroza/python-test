{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create alert</h1>
    </div>
    <div class="form-size">
        <form action="{{ url_for("alerts.create_alert") }}" method="post">
            <div class="form-group">
                <label for="name">Alert/Item name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://...">
            </div>
            <div class="form-group">
                <label for="price_limit">Price limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="100.0" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="help-block">We'll send you an email when the price reaches or goes under this</p>
            </div>
            <button type="submit" class="btn btn-default">Create alert</button>
        </form>
    </div>
{% endblock %}